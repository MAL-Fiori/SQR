<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:table="sap.ui.table">
	<Dialog resizable="true" title="Edit Finding" afterClose="dialogAfterClose" draggable="true" contentWidth="70%">
		<VBox>
			<IconTabBar class="sapUiResponsiveContentPadding" select="onIconTabBarChange">
				<items>
					<IconTabFilter icon="sap-icon://hint" text="info" key="1">
						<f:Form editable="true">
							<f:layout>
								<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0"
									emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false"/>
							</f:layout>
							<f:formContainers>
								<f:FormContainer>
									<f:formElements>
										<f:FormElement label="Supplier">
											<f:fields>
												<Input value="{SelectedValueHelp>/SupplierId}" editable="false"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Subject">
											<f:fields>
												<Input enabled="false" value="{SelectedValueHelp>/Subject}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Category">
											<f:fields>
												<Input enabled="false" value="{SelectedValueHelp>/Category}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Question">
											<f:fields>
												<TextArea enabled="false" rows="3" value="{SelectedValueHelp>/Question}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Score">
											<f:fields>
												<Input enabled="false" value="{SelectedValueHelp>/Score}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Quality Category">
											<f:fields>
												<Input enabled="false" value="{SelectedValueHelp>/QualityCategory}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Status">
											<f:fields>
												<Select id="StatusSelect" enabled="{editVisibilityModel>/visible}" selectedKey="{SelectedValueHelp>/Status}"
													items="{ path: '/ZWM_STATUS_VH', sorter: { path: 'Text' } }">
													<core:Item key="{Id}" text="{Text}"/>
												</Select>
											</f:fields>
										</f:FormElement>
									</f:formElements>
								</f:FormContainer>
								<f:FormContainer>
									<f:formElements>
										<f:FormElement label="Inspection Findings">
											<f:fields>
												<TextArea id="InspectionFindingsText" maxLength="256" rows="3" enabled="{editVisibilityModel>/visible}" value="{SelectedValueHelp>/Finding}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Inspection Location">
											<f:fields>
												<Input editable="false" value="{SelectedValueHelp>/InspectionLocation}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Supplier Risk Category">
											<f:fields>
												<Input id="RiskCategoryInput" enabled="{editVisibilityModel>/visible}" value="{SelectedValueHelp>/SupplerRiskCategory}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Short term Containment">
											<f:fields>
												<Input id="ContainmentInput" enabled="{editVisibilityModel>/visible}" maxLength="256" value="{SelectedValueHelp>/ShortTermContainment}"/>
											</f:fields>
										</f:FormElement>
										<f:FormElement label="Supplier Causal Factor:">
											<f:fields>
												<Input maxLength="256" editable="false" value="{SelectedValueHelp>/SupplierCasualFactor}"/>
											</f:fields>
										</f:FormElement>
									</f:formElements>
								</f:FormContainer>
							</f:formContainers>
						</f:Form>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://attachment" text="Attachments" key="2">
						<UploadCollection noDataText="No files found." noDataDescription="Drop files to upload, or use the &quot;+&quot; button."
							uploadEnabled="{editVisibilityModel>/visible}" uploadComplete="onUploadComplete" fileDeleted="onFileDeleted"
							beforeUploadStarts="onBeforeUploadStarts" uploadTerminated="onUploadTerminated" change="onChange"
							items="{ path: 'Attachments', templateShareable: false }" uploadUrl="{SelectedValueHelp>/uploadUrl}">
							<items>
								<UploadCollectionItem visibleDelete="true" visibleEdit="false" contributor="{CreatedByName}" fileName="{FileName}" documentId="{Id}"
									uploadedDate="{CreatedAt}" url="/sap/opu/odata/SAP/ZSQRMBWA_SRV/Attachments(FindingId='{FindingId}',Id='{Id}')/$value">
									<customData>
										<core:CustomData value="{Id}"/>
										<core:CustomData value="{SelectedValueHelp>/Findingid}"/>
									</customData>
								</UploadCollectionItem>
							</items>
						</UploadCollection>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</VBox>
		<beginButton>
			<Button type="Accept" text="Save" icon="sap-icon://accept" press="onDialogSubmitButton" enabled="{editVisibilityModel>/visible}">
				<customData>
					<core:CustomData value="{SelectedValueHelp>/InspectionId}"/>
					<core:CustomData value="{SelectedValueHelp>/Findingid}"/>
				</customData>
			</Button>
		</beginButton>
		<endButton>
			<Button type="Default" text="Cancel" icon="sap-icon://sys-cancel" press="onDialogCancelButton">
					<customData>
					<core:CustomData value="{SelectedValueHelp>/InspectionId}"/>
					<core:CustomData value="{SelectedValueHelp>/Findingid}"/>
				</customData>
			</Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>